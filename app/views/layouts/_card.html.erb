<div class="card-product p-3 m-3 justify-content-evenly position-relative">
  <%# <%cider = @cider if cider.nil?%>
  <% unless Review.where(cider_id: cider) == []
      ratings = Review.where(cider_id: cider).map{ |review| review.rating}
      @rating = ratings.sum / ratings.count
    else
      @rating = 0
    end
  %>
  <%= cl_image_tag cider.photo.key, class: "card-product-img"%>
  <div class="card-product-infos">
    <div class="card-title">
      <h2><%= cider.name %></h2>
      <p>Tested <%= Reservation.where(cider_id: cider).count %> times</p>
    </div>
    <div class="card-infos">
      <%= cl_image_tag("Sunflower_Seed_ez1ap1.jpg", class: "rating-seeds")*@rating %>
      <div class="card-legal-infos d-flex justify-content-between">
        <p><span class="emoji"> ðŸ¤‘ </span><%= cider.price %>â‚¬</p>
        <p><%= cider.alcohol_level %>%</p>
      </div>
    </div>
  </div>

  <% if cider.user_id === current_user %>
    <div class="product-modifier d-inline">
      <%= link_to edit_cider_path(cider) do %>
        <i class="fa-solid fa-pen-clip"></i>
      <% end %>
      <%= link_to cider_path(cider), method: :delete do %>
        <i class="fa-solid fa-dumpster"></i>
      <% end %>
    </div>
  <% end %>
</div>
