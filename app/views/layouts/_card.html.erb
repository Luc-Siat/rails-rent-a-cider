<%cider = @cider if cider.nil?%>

<div class="card-product m-3 justify-content-evenly">
  <%= cl_image_tag(cider.photo.key)%>
  <div class="card-product-infos">
    <div class="card-title">
      <h2><%= cider.name %></h2>
        <p>Tested <%= Reservation.where(cider_id: cider).count %> times</p>
    </div>
    <div class="card-infos">
      <p><i class="fa-solid fa-seedling"></i><i class="fa-solid fa-seedling"></i><i class="fa-solid fa-seedling"></i></p>
      <div class="card-legal-infos d-flex justify-content-between">
        <p><%= cider.price %></p>
        <p><%= cider.alcohol_level %>%</p>
      </div>
    </div>
  </div>
</div>
