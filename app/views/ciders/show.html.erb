
<div class="container bg-white mt-3">
  <div class="row position-relative">
    <div class="col-12 col-lg-6">
      <%= cl_image_tag(@cider.photo.key, class:"product-page-photo justify-content-center")%>
    </div>

    <div class="col-12 col-lg-6">
      <div class="product-page-description p-3">
        <div class="product-header">
          <h2><%= @cider.name %></h2>
          <p>Tested <%= Reservation.where(cider_id: @cider).count %> times</p>
          <p>flavor: <%= @cider.flavor %></p>
        </div>
        <p><i class="fa-solid fa-seedling"></i><i class="fa-solid fa-seedling"></i><i class="fa-solid fa-seedling"></i></p>
        <div class="product-infos d-inline">
          <p> <%= @cider.alcohol_level%>%</p>
          <p><%= @cider.price %>â‚¬</p>
        </div>
        <% if @reserved && @renter %>
          <p>Already reserved. Would you like to return this cider?</p>
          <%= link_to "Return", edit_cider_reservation_path(cider_id: params[:id]), class: "btn w-100" %>        </div>
          <% elsif @reserved %>
            <p>Reserved by someone else. Sorry!</p>
          <% else %>
            <%= link_to "Reserve", cider_reservations_path(cider_id: params[:id]), method: :post, class: "btn w-100" %>        </div>
        <% end %>
      </div>
    </div>
  </div>
  <%# <div class="product-reviews">
    <%= @reviews.each do |review|  %>
  </div>
</div>
