<%= render partial: "layouts/banner" %>

<div class="container mt-5 mb-5">

  <div class="reservation p-2 d-flex mb-3">
    <input class="form-control" type="text" name="press-field" placeholder="reservation date" class="fa-regular fa-calendar-days">
    <input class="btn h-100" type="submit" name="press" id="press" value="Press!">
  </div>


  <div class="row mt-5">
    <% @ciders.each do |cider| %>
      <div class="col-12 col-s-12 col-sm-6 col-m-6 col-lg-4">
        <%= link_to cider_path(cider) do %>
          <%= render "layouts/card", cider: cider %>
        <% end %>
        <% if cider.user_id === current_user.id %>
          <div class="product-modifier d-inline">
            <%= link_to edit_cider_path(cider) do %>
              <i class="fa-solid fa-pen-clip"></i>
            <% end %>
            <%= link_to cider_path(cider), method: :delete do %>
              <i class="fa-solid fa-dumpster"></i>
            <% end %>
          </div>
    <% end %>
      </div>
    <% end %>
  </div>
</div>


